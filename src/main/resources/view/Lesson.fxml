               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="20.0">
                     <children>
                        <Label prefWidth="110.0" text="Student ID" textFill="#181a2f">
                           <font>
                              <Font name="System Bold" size="17.0" />
                           </font>
                        </Label>
                        <ComboBox fx:id="cmbStudent" prefWidth="120.0" style="-fx-background-color: #ffffff; -fx-border-color: #181A2F; -fx-border-width: 0 0 1px 0;" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" spacing="20.0" GridPane.columnIndex="1">
                     <children>
                        <Label prefWidth="140.0" text="Student Name" textFill="#181a2f">
                           <font>
                              <Font name="System Bold" size="17.0" />
                           </font>
                        </Label>
                        <Label fx:id="lblStudent" text="--">
                           <font>
                              <Font name="System Bold" size="15.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
               </VBox.margin>
            </GridPane>
            <HBox alignment="CENTER_RIGHT">
               <children>
                  <Button fx:id="btnSave" mnemonicParsing="false" onAction="#btnSave" prefWidth="100.0" style="-fx-background-radius: 20; -fx-background-color: #37415C;" text="Save" textFill="#ecf0f1">
                     <HBox.margin>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                     </HBox.margin>
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Button>
                  <Button fx:id="btnUpdate" mnemonicParsing="false" onAction="#btnUpdate" prefWidth="100.0" style="-fx-background-radius: 20; -fx-background-color: #26415E;" text="Update" textFill="#ecf0f1">

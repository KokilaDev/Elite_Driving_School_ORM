                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                     </HBox.margin>
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Button>
                  <Button fx:id="btnDelete" mnemonicParsing="false" onAction="#btnDelete" prefWidth="100.0" style="-fx-background-radius: 20; -fx-background-color: #B4182D;" text="Delete" textFill="#ecf0f1">
                     <HBox.margin>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                     </HBox.margin>
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Button>
                  <Button fx:id="btnClear" mnemonicParsing="false" onAction="#btnClear" prefWidth="100.0" style="-fx-background-radius: 20; -fx-background-color: #54162B;" text="Clear" textFill="#ecf0f1">
                     <HBox.margin>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                     </HBox.margin>
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
            <TableView fx:id="tblLesson">
              <columns>
                <TableColumn fx:id="colLessonID" prefWidth="75.0" text="Lesson ID" />
                <TableColumn fx:id="colDate" prefWidth="75.0" text="Date" />
                  <TableColumn fx:id="colTime" prefWidth="75.0" text="Time" />
                  <TableColumn fx:id="colCourseID" prefWidth="75.0" text="Course ID" />
                  <TableColumn fx:id="colInstructorID" prefWidth="75.0" text="Instructor ID" />
                  <TableColumn fx:id="colStudentID" prefWidth="75.0" text="Student ID" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </TableView>
         </children>
      </VBox>
   </children>
</AnchorPane>

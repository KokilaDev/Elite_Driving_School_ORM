<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="ancCourse" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.elite_driving_school_orm.controller.course.MainCourseController">
   <children>
      <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox>
               <children>
                  <Label text="Driving Courses" textFill="#181a2f">
                     <font>
                        <Font name="System Bold Italic" size="32.0" />
                     </font>
                     <HBox.margin>
                        <Insets bottom="10.0" left="20.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
             <HBox alignment="CENTER_RIGHT">
                 <children>
                     <Button fx:id="btnAddNewCourse" mnemonicParsing="false" onAction="#btnAddNewCourse" stylesheets="@../../css/style.css" text="+ add new course">
                         <font>
                             <Font name="System Bold" size="15.0" />
                         </font>
                         <HBox.margin>
                             <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                         </HBox.margin>
                     </Button>
                 </children>
             </HBox>
            <TableView fx:id="tblCourse">
              <columns>
                <TableColumn fx:id="colCourseID" prefWidth="75.0" text="Course ID" />
                <TableColumn fx:id="colName" prefWidth="75.0" text="Name" />
                  <TableColumn fx:id="colFee" prefWidth="75.0" text="Fee" />
                  <TableColumn fx:id="colDuration" prefWidth="75.0" text="Duration" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </TableView>
             <HBox alignment="CENTER_RIGHT">
                 <children>
                     <Button fx:id="btnUpdate" mnemonicParsing="false" onAction="#btnUpdate" prefWidth="100.0" style="-fx-background-radius: 20; -fx-background-color: #44bd32;" text="Update" textFill="#ecf0f1">
                         <font>
                             <Font name="System Bold" size="16.0" />
                         </font>
                         <HBox.margin>
                             <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                         </HBox.margin>
                     </Button>
                     <Button fx:id="btnDelete" mnemonicParsing="false" onAction="#btnDelete" prefWidth="100.0" style="-fx-background-radius: 20; -fx-background-color: #EA2027;" text="Delete" textFill="#ecf0f1">
                         <font>
                             <Font name="System Bold" size="16.0" />
                         </font>
                         <HBox.margin>
                             <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                         </HBox.margin>
                     </Button>
                 </children></HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
